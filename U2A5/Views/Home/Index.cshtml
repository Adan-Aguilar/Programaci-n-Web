@model U2A5.Models.ViewModel.ClasificacionViewModel

@{
    Layout = "_Layout";
}

<div class="slides">
    <img src="~/images/carousel@(Model.NumImagen).jpg">
</div>

<h1>Clasificación de los vertebrados</h1>

<div class="clases">
    @foreach (var clase in Model.Clase)
    {
        <div>
            <a href="~/Especie/@clase.Nombre">
                <img src="~/clases/@(clase.Id).jpg">
                <h1>@clase.Nombre</h1>
                <p>@clase.Descripcion</p>
            </a>
        </div>
    }
</div>


